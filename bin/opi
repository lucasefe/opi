#!/usr/bin/env ruby
# encoding: utf-8

# ruby parse.rb GAL/*{VISA,AMEX}.input

require_relative '../lib/opi'

inputs = ARGV

while input = inputs.shift
  unless File.exist?(input)
    STDERR.puts format("File not found: '%s'", input)
    exit 1
  end

  Opi.read_input(input) do |text|
    output = format('%s/%s.output', File.dirname(input), File.basename(input, '.csv'))

    STDOUT.puts format("=> #{input} -> #{output} ")

    File.open(output, 'w+') do |f|
      f.write Opi::Parser.new(text).process
    end
  end
end
